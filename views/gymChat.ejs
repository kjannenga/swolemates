<html>
<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
<nav class="navbar sticky-top navbar-dark mb-5 shadow-lg" style="background:rgba(0,0,0,.17)">
    <div class="row d-flex pl-3">
        <a class="navbar-brand" href="/">SwoleMates</a>
    </div>
    <div class="float-right">
        <div class="row font-weight-light">
            <a href="/gymChat" class="text-dark pt-1 ">Gym Chat</a>
            <a href="/gymEvents" class="px-3 text-dark pt-1">Gym Events</a>
            <div class="dropdown pr-3">
                <button class="btn btn-secondary dropdown-toggle font-weight-lighter py-1" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
                    <%=user.name%>
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                    <button class="dropdown-item" type="button"><a href="/profile" class="text-dark">Home</a></button>
                    <button class="dropdown-item" type="button"><a href="/edit" class="text-dark">Edit Profile</a></button>
                    <button class="dropdown-item" type="button"><a href="/logout" class="text-dark">Log Out</a></button>
                </div>
            </div>
        </div>
    </div>

</nav>
<div class="container">
    <div class="row d-flex justify-content-center pt-5">
        <div class="section text-center">
            <div class="pt-4">

                <button><a href="/profile">Back</a></button>
                <h5>Add Post</h5>
                <form action="/addGymPost" method="post">
                    <input class="form-control mb-2" type='text' name="title" placeholder="Title">
                    <textarea class="form-control mb-2" name="post" placeholder="Post"></textarea>
                    <input class="form-control" type="submit">
                </form>
                <h5>Posts</h5>
                <% for (let i = 0; i < posts.length; i++) { %>
                <a href="gymPost/<%= posts[i].id %>">
                <div class="card p-3 m-2">
                    <% for (let j = 0; j < people.length; j++) { %>
                        <%if(posts[i].userId == people[j].id) {%>
                            <h5><%=posts[i].title%></h5>
                            <p>Post By: <%= people[j].name %></p>
                            <p><%= posts[i].post %></p>
                        <%}%>
                    <%}%>
                </div>
                </a>
                <%}%>
            </div>
        </div>
    </div>


</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>

</html>